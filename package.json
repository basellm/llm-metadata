{
  "name": "llm-metadata",
  "version": "1.0.0",
  "description": "A lightweight static API for discovering and integrating LLM metadata",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run compile && node dist/build.js",
    "build:force": "npm run compile && node dist/build.js --force",
    "check": "npm run compile && node dist/build.js --check",
    "clean": "rimraf .cache dist src/**/*.js src/**/*.d.ts",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "dev": "npm run compile:watch",
    "docs-md-only": "npm run compile && node dist/build.js --docs-md-only",
    "api-only": "npm run compile && node dist/build.js --api-only",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "llm",
    "metadata",
    "api",
    "models",
    "ai"
  ],
  "author": "basellm",
  "license": "MIT"
}
